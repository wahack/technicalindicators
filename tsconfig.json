{
  "compileOnSave": true,
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./declarations",
    "lib": [
      "ES2022",
      "dom"
    ],
    "module": "CommonJS",
    "target": "ES2022",
    "ignoreDeprecations": "5.0",
    "noImplicitAny": false,
    "outDir": "./lib",
    "preserveConstEnums": true,
    "removeComments": false,
    "sourceMap": false,
    "baseUrl": ".", // This must be specified if "paths" is.
    "typeRoots" : ["typings", "node_modules/**/@types"]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*-spec.ts"
  ]
}
